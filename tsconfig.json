{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "target": "es6",
    "lib": ["esnext"],
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowJs": true,
    "baseUrl": "src",
    "strictNullChecks": true,
    "declaration": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "paths": {
      "@errors/*": ["errors/*"],
      "@protocols/*": ["protocols/*"],
      "@validators/*": ["validators/*"],
      "@constants/*": ["constants/*"]
    },
    "strict": true
  },
  "include": ["src"]
}

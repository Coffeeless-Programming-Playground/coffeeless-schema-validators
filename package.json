{
  "name": "coffeeless-schema-validators",
  "description": "An schema validation package made with love by Coffeeless Programming",
  "version": "2.8.0",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "npm run clean  && tsc --p tsconfig.build.json && tsc-alias",
    "test": "jest --passWithNoTests --no-cache --runInBand",
    "test:unit": "npm test -- --watch -c jest-unit.config.js",
    "test:integration": "npm test -- --watch -c jest-integration.config.js",
    "test:staged": "npm test --findRelatedTests",
    "test:watch": "npm test -- --watch --no-cache",
    "test:ci": "npm test -- --coverage",
    "test:debug": "npm test conditional-validator.spec.ts",
    "clean": "rimraf dist/",
    "prepare": "husky install"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "devDependencies": {
    "@faker-js/faker": "^6.0.0-alpha.7",
    "@types/jest": "^27.4.1",
    "@types/node": "^20.10.0",
    "@types/supertest": "^6.0.3",
    "eslint-config-standard-with-typescript": "^40.0.0",
    "husky": "^8.0.0",
    "jest": "^27.5.1",
    "jest-mock-extended": "^3.0.1",
    "lint-staged": "^15.1.0",
    "prettier": "^3.5.3",
    "rimraf": "^6.0.1",
    "supertest": "^7.1.1",
    "ts-jest": "^27.1.3",
    "tsc-alias": "^1.8.16"
  }
}
